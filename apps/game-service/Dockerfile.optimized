# ===================================
# üöÄ Optimized Dockerfile with pnpm deploy
# ===================================

FROM node:24-alpine AS base
RUN corepack enable
WORKDIR /app

# ===================================
# Stage 1: Dependencies setup
# ===================================
FROM base AS installer

# pnpm ÏÑ§Ï†ï ÌååÏùº Î≥µÏÇ¨
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./

# Workspace packages (package.jsonÎßå)
COPY packages/shared/package.json ./packages/shared/
COPY packages/database/package.json ./packages/database/
COPY packages/config/package.json ./packages/config/

# ÏÑúÎπÑÏä§ package.json
COPY apps/game-service/package.json ./apps/game-service/

# Prisma schema Î≥µÏÇ¨ (generate Ï†ÑÏóê ÌïÑÏöî)
COPY packages/database/prisma ./packages/database/prisma

# Dependencies ÏÑ§Ïπò (workspace Ìè¨Ìï®)
RUN pnpm install --frozen-lockfile

# Prisma Client ÏÉùÏÑ±
RUN pnpm --filter=@xingu/database db:generate

# ===================================
# Stage 2: Add built code
# ===================================
FROM installer AS builder

# ÎπåÎìúÎêú workspace Ìå®ÌÇ§ÏßÄ Î≥µÏÇ¨ (Î°úÏª¨ÏóêÏÑú ÎØ∏Î¶¨ ÎπåÎìú)
COPY packages/shared/dist ./packages/shared/dist
COPY packages/database/dist ./packages/database/dist

# ÎπåÎìúÎêú ÏÑúÎπÑÏä§ ÏΩîÎìú Î≥µÏÇ¨
COPY apps/game-service/dist ./apps/game-service/dist

# ===================================
# Stage 3: Deploy (production only)
# ===================================
FROM builder AS deployer

# pnpm deploy: ÌïÑÏöîÌïú dependenciesÎßå Ï∂îÏ∂ú
RUN pnpm --filter=@xingu/game-service --prod deploy --legacy /app/deploy

# ÎπåÎìú ÌååÏùº Î≥µÏÇ¨
RUN cp -r apps/game-service/dist /app/deploy/dist

# Prisma Client Î≥µÏÇ¨ (.prisma Ìè¥Îçî)
RUN cp -r node_modules/.pnpm/@prisma+client@*/node_modules/.prisma /app/deploy/node_modules/.pnpm/@prisma+client@*/node_modules/ 2>/dev/null || true

# ===================================
# Stage 4: Runner
# ===================================
FROM base AS runner
ENV NODE_ENV=production

RUN apk add --no-cache curl && \
    addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 expressjs

# DeployÎêú Í≤∞Í≥ºÎßå Î≥µÏÇ¨
COPY --from=deployer --chown=expressjs:nodejs /app/deploy /app

USER expressjs
WORKDIR /app

EXPOSE 3003
ENV PORT=3003

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3003/health || exit 1

CMD ["node", "dist/index.js"]
