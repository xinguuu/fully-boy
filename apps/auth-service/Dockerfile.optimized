# ===================================
# ðŸš€ Optimized Dockerfile with pnpm deploy
# ===================================
# Benefits:
# - Only includes necessary dependencies for auth-service
# - Smaller image size (50-100MB vs 500MB+)
# - Faster builds with better caching
# - No dev dependencies in production
# ===================================

FROM node:24-alpine AS base
RUN corepack enable
WORKDIR /app

# ===================================
# Stage 1: Dependencies installer
# ===================================
FROM base AS installer
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./
COPY turbo.json ./
COPY tsconfig.json ./

# Copy workspace packages
COPY packages/shared/package.json ./packages/shared/
COPY packages/database/package.json ./packages/database/
COPY packages/config/package.json ./packages/config/

# Copy auth-service package.json
COPY apps/auth-service/package.json ./apps/auth-service/

# Install all dependencies (for building)
RUN pnpm install --frozen-lockfile

# ===================================
# Stage 2: Builder
# ===================================
FROM installer AS builder

# Copy source code
COPY packages/ ./packages/
COPY apps/auth-service/ ./apps/auth-service/

# Build shared packages first
RUN pnpm --filter=@xingu/database db:generate && \
    pnpm --filter=@xingu/shared build && \
    pnpm --filter=@xingu/database build

# Build auth-service
RUN pnpm --filter=@xingu/auth-service build

# ===================================
# Stage 3: Deploy (pnpm deploy magic âœ¨)
# ===================================
FROM builder AS deployer

# ðŸŽ¯ Extract ONLY auth-service dependencies (production only)
# This creates a clean, isolated copy with:
# - Only runtime dependencies (no dev deps)
# - Only @xingu/shared, @xingu/database (used by auth-service)
# - Proper node_modules structure
RUN pnpm --filter=@xingu/auth-service --prod deploy --legacy /app/deploy

# Copy built files
COPY --from=builder /app/apps/auth-service/dist /app/deploy/dist
COPY --from=builder /app/packages/database/node_modules/.prisma /app/deploy/node_modules/.prisma

# ===================================
# Stage 4: Production runner
# ===================================
FROM base AS runner
ENV NODE_ENV=production

# Install security updates and create user
RUN apk add --no-cache curl && \
    addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nestjs

# ðŸŽ¯ Copy ONLY the deployed output (clean and minimal)
COPY --from=deployer --chown=nestjs:nodejs /app/deploy /app

USER nestjs
WORKDIR /app

EXPOSE 3001
ENV PORT=3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3001/health || exit 1

CMD ["node", "dist/main.js"]
