# ===================================
# ğŸš€ Optimized Dockerfile with pnpm deploy
# Web (Next.js 15 SSR)
# ===================================
# Note: Next.js standalone output already optimizes dependencies,
# but pnpm deploy provides additional control and consistency
# ===================================

FROM node:24-alpine AS base
RUN corepack enable
WORKDIR /app

# ===================================
# Stage 1: Dependencies installer
# ===================================
FROM base AS installer
RUN apk add --no-cache libc6-compat

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./
COPY turbo.json ./
COPY tsconfig.json ./

# Copy workspace packages
COPY packages/shared/package.json ./packages/shared/
COPY packages/database/package.json ./packages/database/
COPY packages/config/package.json ./packages/config/

# Copy web package.json
COPY apps/web/package.json ./apps/web/

# Install all dependencies (for building)
RUN pnpm install --frozen-lockfile

# ===================================
# Stage 2: Builder
# ===================================
FROM installer AS builder

# Copy source code
COPY packages/ ./packages/
COPY apps/web/ ./apps/web/

# Prisma ìƒì„±
RUN pnpm --filter=@xingu/database db:generate

# Turborepoë¡œ ë¹Œë“œ (ìë™ìœ¼ë¡œ ì˜ì¡´ì„± ìˆœì„œ ì²˜ë¦¬)
# Next.jsëŠ” standalone outputìœ¼ë¡œ ìµœì í™”ëœ ë²ˆë“¤ ìƒì„±
RUN pnpm turbo build --filter=@xingu/web...

# ===================================
# Stage 3: Deploy (pnpm deploy + Next.js standalone)
# ===================================
FROM builder AS deployer

# ğŸ¯ Option A: Use pnpm deploy for explicit control
RUN pnpm --filter=@xingu/web --prod deploy --legacy /app/deploy

# Copy Next.js standalone output (automatically optimized by Next.js)
COPY --from=builder /app/apps/web/.next/standalone /app/deploy-standalone

# Copy static assets (not included in standalone)
COPY --from=builder /app/apps/web/.next/static /app/deploy-standalone/apps/web/.next/static

# Copy public folder if it exists (optional for Next.js)
# COPY --from=builder /app/apps/web/public /app/deploy-standalone/apps/web/public

# Copy workspace packages' built files
COPY --from=builder /app/packages/shared/dist /app/deploy-standalone/node_modules/@xingu/shared/dist

# ===================================
# Stage 4: Production runner
# ===================================
FROM base AS runner
ENV NODE_ENV=production

RUN apk add --no-cache curl && \
    addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# ğŸ¯ Copy Next.js standalone output (includes only runtime dependencies)
COPY --from=deployer --chown=nextjs:nodejs /app/deploy-standalone /app

USER nextjs
WORKDIR /app

EXPOSE 3000
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# Next.js standalone creates server.js at the root of standalone output
CMD ["node", "apps/web/server.js"]
